<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/accelerometer_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Accel." />

            <CheckBox
                android:id="@+id/system_stats_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="System " />

            <CheckBox
                android:id="@+id/gps_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="GPS" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
			<CheckBox
                android:id="@+id/network_location_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="NLoc" />
            <CheckBox
                android:id="@+id/pseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Pseudo" />

            <CheckBox
                android:id="@+id/test_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Light" />
        </TableRow>
        <TableRow>
            
            <CheckBox
                android:id="@+id/test_proximity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="Prox." />




            <CheckBox
                android:id="@+id/CDMATest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:text="CdmaStat" />

			<Button
			    android:id="@+id/StartTests"
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="test"
                android:text="Start Tests"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/showPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous" />
        <TextView
            android:id="@+id/testShown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Test" />
        <Button
            android:id="@+id/showNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>

    <ImageView
        android:id="@+id/forGraph"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_search" />

</LinearLayout>